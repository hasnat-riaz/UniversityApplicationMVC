@model IEnumerable<UniversityApplicationMVC.Models.UniversityModels.RoomAllocationInformation>

@{
    ViewBag.Title = "Classroom Allocation Information";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.DropDownList("departmentId", String.Empty)
}
<div id="section-data">
    @Html.Partial("~/Views/Shared/_FilteredRoomAllocationInfo.cshtml", Model)
</div>


<script type="text/javascript">
    function FillData(id) {
        $("#section-data").load("RoomAllocationInformation/FilteredRoomAllocationInfo", { departmentId: id });
    }

    $(function () {
        $("#departmentId").change(function () {
            var id = $("#departmentId").val();
            FillData(id);
        });
    });
</script>



